{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "es2019", "dom"],
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "preserveConstEnums": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
